<Page x:Class="ePodrecznikiDesktop.Terms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Terms">

    <Grid x:Name="ui_Grid" Background="Black">
        <Grid.RowDefinitions>            
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border x:Name="ui_WebBorder" BorderThickness="0,3,0,3">
            <WebBrowser x:Name="ui_WebBrowser" OpacityMask="Black"></WebBrowser>
        </Border>

        <Button x:Name="ui_TermsAccept" IsEnabled="False" Content="Akceptuję regulamin" HorizontalAlignment="Center" Grid.Row="1" Click="TermsAccept_Click" Margin="0,20,0,20" Padding="10,8,10,8" FontSize="16" />
    </Grid>
</Page>
